	</dependencies>


	<build>
		<sourceDirectory>Chapter 1</sourceDirectory>
		<resources>
			<resource>
				<directory>Chapter 1</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
